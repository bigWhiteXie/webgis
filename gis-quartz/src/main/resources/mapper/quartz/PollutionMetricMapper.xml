<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.quartz.mapper.PollutionMetricMapper">

    <resultMap type="PollutionMetric" id="PollutionMetricResult">
        <result property="id" column="id"/>
        <result property="metricCode" column="metric_code"/>
        <result property="metricName" column="metric_name"/>
        <result property="unit" column="unit"/>
        <result property="category" column="category"/>
    </resultMap>

    <sql id="selectPollutionMetricVo">
        select id, metric_code, metric_name, unit, category
        from pollution_metric
    </sql>

    <select id="selectPollutionMetricById" parameterType="Long" resultMap="PollutionMetricResult">
        <include refid="selectPollutionMetricVo"/>
        where id = #{id}
    </select>
    
    <select id="selectPollutionMetricList" parameterType="map" resultMap="PollutionMetricResult">
        <include refid="selectPollutionMetricVo"/>
        <where>
            <if test="pollutionMetric.metricCode != null  and pollutionMetric.metricCode != ''"> and metric_code = #{pollutionMetric.metricCode}</if>
            <if test="pollutionMetric.metricName != null  and pollutionMetric.metricName != ''"> and metric_name like concat('%', #{pollutionMetric.metricName}, '%')</if>
            <if test="pollutionMetric.unit != null  and pollutionMetric.unit != ''"> and unit = #{pollutionMetric.unit}</if>
            <if test="pollutionMetric.category != null  and pollutionMetric.category != ''"> and category = #{pollutionMetric.category}</if>
        </where>
        ORDER BY id
        LIMIT #{limit} OFFSET #{offset}
    </select>
    
    <insert id="insertPollutionMetric" parameterType="PollutionMetric" useGeneratedKeys="true" keyProperty="id">
        insert into pollution_metric
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="metricCode != null and metricCode != ''">metric_code,</if>
            <if test="metricName != null and metricName != ''">metric_name,</if>
            <if test="unit != null">unit,</if>
            <if test="category != null">category,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="metricCode != null and metricCode != ''">#{metricCode},</if>
            <if test="metricName != null and metricName != ''">#{metricName},</if>
            <if test="unit != null">#{unit},</if>
            <if test="category != null">#{category},</if>
        </trim>
    </insert>
    
    <update id="updatePollutionMetric" parameterType="PollutionMetric">
        update pollution_metric
        <set>
            <if test="metricCode != null and metricCode != ''">metric_code = #{metricCode},</if>
            <if test="metricName != null and metricName != ''">metric_name = #{metricName},</if>
            <if test="unit != null">unit = #{unit},</if>
            <if test="category != null">category = #{category},</if>
        </set>
        where id = #{id}
    </update>
    
    <delete id="deletePollutionMetricById" parameterType="Long">
        delete from pollution_metric where id = #{id}
    </delete>
    
    <delete id="deletePollutionMetricByIds" parameterType="Long">
        delete from pollution_metric where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <select id="selectByMetricName" parameterType="String" resultMap="PollutionMetricResult">
        <include refid="selectPollutionMetricVo"/>
        WHERE UPPER(metric_name) = UPPER(#{metricName}) 
        LIMIT 1
    </select>
    
    <select id="selectByMetricCode" parameterType="String" resultMap="PollutionMetricResult">
        <include refid="selectPollutionMetricVo"/>
        WHERE metric_code = #{metricCode}
    </select>

</mapper>